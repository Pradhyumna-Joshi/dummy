<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/Theme.MyApplication.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#09A4F8"

            app:popupTheme="@style/Theme.MyApplication.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_home"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollIndicators="left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_below="@id/toolbar"
        android:background="#39B9FF"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#39B9FF"
            android:layout_margin="3dp"
            app:cardMaxElevation="11dp"
            app:cardElevation="11dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_home"
            android:background="#39B9FF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_home"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#39B9FF"
            android:layout_margin="3dp"
            app:cardMaxElevation="11dp"
            app:cardElevation="11dp"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_loca"
            android:layout_width="match_parent"
            android:background="#39B9FF"
            android:layout_height="match_parent"
            android:padding="11dp"
            android:src="@drawable/ic_navi"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#39B9FF"
            android:layout_margin="3dp"
            app:cardMaxElevation="11dp"
            app:cardElevation="11dp"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <ImageView
            android:id="@+id/iv_real"
            android:layout_width="match_parent"

            android:background="#39B9FF"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/ic_real"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#39B9FF"
            android:layout_margin="3dp"
            app:cardMaxElevation="11dp"
            app:cardElevation="11dp"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_fut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#39B9FF"
            android:padding="12dp"
            android:src="@drawable/ic_future"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#39B9FF"
            android:layout_margin="3dp"
            app:cardMaxElevation="11dp"
            app:cardElevation="11dp"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_signOut"
            android:layout_width="match_parent"
            android:background="#39B9FF"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_out"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>